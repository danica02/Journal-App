<body class="home_bg">   
    <div class="datetime">
        <h2 class="journal">
            <i class="bi bi-suit-heart-fill"></i>
            <i class="bi bi-suit-heart-fill"></i> 
            MY JOURNAL 
            <i class="bi bi-suit-heart-fill"></i>
            <i class="bi bi-suit-heart-fill"></i>
        </h2>
        <div id="current_date"></div>
        <br/>
        <%= link_to 'GET STARTED', new_user_session_path, class:"btn btn-start" %>
    <div>
</body>

<script>
    date = new Date();
    year = date.getFullYear();
    month = date.getMonth() + 1;
    day = date.getDate();

    hours = date.getHours();
    minutes = date.getMinutes();

    newformat = hours >= 12 ? 'PM' : 'AM';

    hours = hours % 12;

    hours = hours ? hours : 12; 
    hours = hours < 10 ? '0' + hours : hours;
    minutes = minutes < 10 ? '0' + minutes : minutes;

    document.getElementById("current_date").innerHTML = month + "/" + day + "/" + year + " " + hours + ":" + minutes + " " + newformat;
</script>