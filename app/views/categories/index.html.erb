<div class="row">
  <% @categories.each do |category| %>
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= category.name %></h5>
          <p class="card-text"><%= category.tasks.count %> Tasks</p>
          <p class="card-text">Created <%= time_ago_in_words(category.created_at) %> ago</p>
          <div class="rud">
            <i class="show-icon bi-eye-fill"></i>
            <%= link_to 'Show', category, class:"show-icon" %>

            <i class="edit-icon bi-pencil-square"></i>
            <%= link_to 'Edit', edit_category_path(category), class:"edit-icon" %>

            <i class="delete-icon bi-trash-fill"></i>
            <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"delete-icon" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
